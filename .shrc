# vim: ft=zsh

# Add system specific paths
if [ -f ~/.paths ]; then
  while read dir; do
    if [ -d $dir ]; then
      PATH=$dir:$PATH
    fi
  done < ~/.paths
fi

# Add custom scripts to the path
if [ -d ~/.scripts ]; then
  PATH=~/.scripts:$PATH
fi

# Include functions
if [ -f ~/.functions ]; then
  source ~/.functions
fi

# Now export it
export PATH

# Set default commands
export EDITOR=vim
export PAGER=less

# Default less options, the FX causes short files to be displayed inline
export LESS=-iFXRx4

# If not running interactively, skip the rest
[ -z "$PS1" ] && return

# Include aliases
if [ -f ~/.aliases ]; then
  source ~/.aliases
fi
